# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Web App URL (where your app is hosted)
WEB_APP_URL=https://your-domain.com

# Server Port
PORT=3000

# AI API Configuration (OpenAI, Google Cloud NLP, or HuggingFace)
# Choose your AI provider and uncomment the appropriate configuration:

# Option 1: OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Option 2: Google Cloud NLP
# GOOGLE_CLOUD_API_KEY=your_google_api_key_here

# Option 3: HuggingFace
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# AI Provider (openai, google, huggingface, or mock for testing)
AI_PROVIDER=mock
